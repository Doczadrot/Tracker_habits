[flake8]
max-line-length = 119
exclude = 
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    env,
    .env,
    node_modules,
    .pytest_cache

ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)

per-file-ignores =
    __init__.py:F401
    settings.py:E501
    */migrations/*:E501,F401
